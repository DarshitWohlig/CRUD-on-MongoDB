<!--Including header-->
<%- include('include/_header') %>
<!--/Including header-->

    
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i> All Users</a>
            </div>
        </div>

        <div class="form-title text-center">
            <h2 class="text-dark">Update User</h2>
            <span class="text-light"> Use the below form to Update user</span>
        </div>

        <!--Add user form-->
                
        <form id="update_user" method="post">
            <div class="new_user">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="hidden" name="id" value="">
                    <input type="text" name="name" value="" placeholder="eg. Darshit Thakker"> 
                </div>
                <div class="form-group">
                    <label for="Email">Email</label> 
                    <input type="text" name="Email" value="" placeholder="eg. DarshitThakker@gmail.com"> 
                </div>
                <div class="form-group">
                    
                    <div class="radio inline">
                        <label for="Gender">Gender : </label>
                        <input id="radio2" type="radio" name="Gender" value="Male"> 
                        <label for="radio2" class="radio-label">Male</label>
                    </div>
                    <div class="radio inline">
                        
                        <input id="radio3" type="radio" name="Gender" value="Female"> 
                        <label for="radio3" class="radio-label">Female</label>
                    </div>
                </div>

                <div class="form-group">
                    
                    <div class="radio inline">
                        <label for="Status">Status : </label>
                        <input id="radio4" type="radio" name="Status" value="Active"> 
                        <label for="radio4" class="radio-label">Active</label>
                    </div>
                    <div class="radio inline">
                        
                        <input id="radio5" type="radio" name="Status" value="Inactive"> 
                        <label for="radio5" class="radio-label">Inactive</label>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn text-dark update ">Submit</button>
                </div>
            </div>
        </form>
    </div>
</main>

<!--Including footer-->
<%- include('include/_footer') %>
<!--/Including footer-->